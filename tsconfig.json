{
  "compilerOptions": {
    "lib": [
      "es2015",
      "es2015.promise",
      "es2016",
      "es6",
      "dom"
    ],
    "outDir": "./dist/",
    "declaration": true,
    "declarationDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es5",
    "allowJs": false,
    "noErrorTruncation": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ]
  },
  "files": [
    "src/index.ts",
    "src/node.ts",
    "src/web.ts"
  ],
  "compileOnSave": false
}
